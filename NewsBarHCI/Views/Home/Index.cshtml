@{
    ViewBag.Title = "Home Page";
}

@model NewsBarHCI.Models.IndexViewModel

<div class="container news">
    @if (Model != null)
    {
        foreach (var item in Model.Vijesti)
        {
            <div class="row vijest">
                <div class="col-md-12">
                    <h1>@item.Naslov</h1>
                </div>
                <div class="col-md-6">
                    <!--<img src="UrlHelper.GenerateContentUrl(item.Slika, this.Context)" />-->
                </div>
                <div class="col-md-6">
                    <h3>@item.AutorId</h3>
                    <p>@item.Tekst</p><br />
                </div>

                <div class="col-md-12">
                    <form method="post" action="PostComment">
                        <input type="hidden" name="ownerid" value="@item.Id.ToString()" /><br />
                        <p>Autor: <input name="author" /></p>
                        <p><textarea name="comment"></textarea></p>
                        <p><button type="submit">Submit</button></p>
                    </form>
                </div>

                <div class="col-md-12">
                    <ul class="list-group">
                        @foreach (var comment in item.Komentari)
                        {
                            <li class="list-group-item">
                                <h4>@comment.Osoba</h4>
                                <p>@comment.Tekst</p>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        }
    }
</div>

<style type="text/css">
    .vijest {
        background-color: #eeeeee;
        border-color: gray;
        border-style: solid;
        border-radius: 16px;
    }
</style>